@model IEnumerable<EventTicket.Data.Models.UserTicket>

@{
    ViewData["Title"] = "Purchased Tickets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Purchased Tickets</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Event Name</th>
            <th>Ticket ID</th>
            <th>Seat Number</th>
            <th>Price</th>
            <th>Order Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var userTicket in Model)
        {
            <tr>
                <td>@userTicket.Ticket.Event.Name</td>
                <td>@userTicket.Ticket.TicketId</td>
                <td>@userTicket.Ticket.SeatNumber</td>
                <td>@userTicket.Ticket.Price.ToString("N0") VND</td>
                <td>@userTicket.Order.OrderDate?.ToString("dd/MM/yyyy HH:mm")</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="TransactionHistory" asp-controller="Profile">View Transaction History</a> |
    <a asp-action="Index" asp-controller="Home">Back to Home</a>
</div>