@model IEnumerable<EventTicket.Data.Models.Event>
@{
    ViewData["Title"] = "Quản lý sự kiện";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <h1 class="m-0">Quản lý sự kiện</h1>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <a asp-action="Create" class="btn btn-primary">Thêm sự kiện mới</a>
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible mb-0" style="flex-grow: 1; margin-left: 10px;">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <span>@TempData["SuccessMessage"]</span>
                    </div>
                }
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Tên sự kiện</th>
                            <th>Danh mục</th>
                            <th>Ngày diễn ra</th>
                            <th>Giá vé</th>
                            <th>Số vé</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Category?.Name</td>
                                <td>@item.EventDate.ToString("dd/MM/yyyy")</td>
                                <td>@item.Price.ToString("N0") VND</td>
                                <td>@item.TotalTickets</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.EventId" class="btn btn-sm btn-warning">Sửa</a>
                                    <a asp-action="Delete" asp-route-id="@item.EventId" class="btn btn-sm btn-danger">Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>